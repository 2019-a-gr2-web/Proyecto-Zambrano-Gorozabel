<% const titulo = "Crear Evento" %>
<%- include('../fragments/header',{titulo:titulo}) %>
<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class= "text-center" style="margin-bottom: 10px">
                <h2><%=titulo%></h2>
            </div>
            <form action="/vxt/evento/crear-evento" method="post">

                <div class="form-group row">
                    <label for="nombreEvento" class="form-control-label col-sm-2">Nombre:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="nombreEvento" id="nombreEvento" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="fechaEvento" class="form-control-label col-sm-2">Fecha:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="fechaEvento" name="fechaEvento" type="date">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="lugarEvento" class="form-control-label col-sm-2"> Lugar:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <select name="lugarEvento" id="lugarEvento"></select>

                    </div>
                </div>
                <div class="form-group row">
                    <label for="imagenEvento" class="form-control-label col-sm-2"> Imagen:</label>
                    <div class="col-sm-9" style="margin-left: 10px ">
                        <input id="imagenEvento" name="imagenEvento" multiple type="file" accept="image/*">
                    </div>
                </div>



               

                <button class="btn btn-block btn-dark">Aceptar</button>
                <button class="btn btn-block btn-danger">Cancelar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
