<% const titulo = "Crear Editorial" %>
<%- include('../fragments/header',{titulo:titulo}) %>
<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class= "text-center" style="margin-bottom: 10px">
                <h2><%=titulo%></h2>
            </div>
            <form action="">

                <div class="form-group row">
                    <label for="nombreEditorial" class="form-control-label col-sm-2">Nombre:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="nombreEditorial" id="nombreEditorial" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lugarEditorial" class="form-control-label col-sm-2"> Lugar:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <select name="lugarEditorial" id="lugarEditorial"></select>

                    </div>
                </div>

                <div class="form-group row">
                    <label for="imagenEditorial" class="form-control-label col-sm-2"> Imagen:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="imagenEditorial" name="imagenEditorial" multiple type="file" accept="image/*">
                    </div>
                </div>
                <button class="btn btn-block btn-dark">Aceptar</button>
                <button class="btn btn-block btn-danger">Cancelar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
