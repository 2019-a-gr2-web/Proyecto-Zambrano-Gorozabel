<% const titulo = "Crear Usuario" %>
<%- include('../fragments/header',{titulo:titulo}) %>
<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class= "text-center" style="margin-bottom: 10px">
                <h2><%=titulo%></h2>
            </div>
            <form action="">
                <div class="form-group row">
                    <label for="cedulaUsuario" class="form-control-label col-sm-2">CÃ©dula:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="cedulaUsuario" id="cedulaUsuario" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="nombreUsuario" class="form-control-label col-sm-2">Nombre:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="nombreUsuario" id="nombreUsuario" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="emailUsuario" class="form-control-label col-sm-2">Email:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="emailUsuario" id="emailUsuario" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="passwordUsuario" class="form-control-label col-sm-2">Clave:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="password" name="passwordUsuario" id="passwordUsuario" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="passwordUsuarioConf" class="form-control-label col-sm-2">Confirmar Clave:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="password" name="passwordUsuarioConf" id="passwordUsuarioConf" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="rolUsuario" class="form-control-label col-sm-2"> Rol:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <select name="rolUsuario" id="rolUsuario"></select>

                    </div>
                </div>

                <div class="form-group row">
                    <label for="imagenUsuario" class="form-control-label col-sm-2"> Imagen:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="imagenUsuario" name="imagenUsuario" multiple type="file" accept="image/*">
                    </div>
                </div>
                <button class="btn btn-block btn-dark">Aceptar</button>
                <button class="btn btn-block btn-danger">Cancelar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
